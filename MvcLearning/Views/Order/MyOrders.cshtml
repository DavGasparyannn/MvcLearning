@model List<OrderDetailsDTO>

<h2>My orders</h2>

@if (!Model.Any())
{
    <p>You Already haven`t orders</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderingTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@order.Status</td>
                    <td>@order.TotalAmount ₽</td>
                    <td>
                        <a asp-action="Details" asp-route-orderId="@order.Id">Check details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}