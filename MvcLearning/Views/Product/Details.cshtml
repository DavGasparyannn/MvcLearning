@model MvcLearning.Data.Entities.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

@if (Model == null)
{
    <p>Product not found.</p>
}
else
{
    
}
{
    <div>
        <h3>@Model.Name</h3>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Shop:</strong> @Model.Shop?.Name</p>
        <a asp-action="Index" asp-controller="Shops" class="btn btn-primary">Back to Shop</a>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}