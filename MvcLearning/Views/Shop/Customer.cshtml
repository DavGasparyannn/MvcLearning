@using MvcLearning.Data.Entities
@model List<OrderDetailsDTO>

@{
    ViewData["Title"] = "Customer Orders";
}

<h2>Customer Orders</h2>

@if (Model == null || !Model.Any())
{
    <p>No orders found for this customer.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Total Amount</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderingTime.ToString("g")</td>
                    <td>@order.Status</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>
                        <a asp-controller="Order" asp-action="Details" asp-route-orderId="@order.Id">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}